---
import type { CollectionEntry } from "astro:content";

interface Props {
  project: CollectionEntry<"work">;
}

const { data, slug } = Astro.props.project;
---

<div class="flex w-full flex-col items-start justify-between">
  <div class="flex flex-col">
    <h2 class="text-9xl">{data.title}</h2>
    <p class="text-3xl self-end max-w-[253px]">{data.subtitle}</p>
  </div>
  <div class="flex flex-row justify-between items-center w-full pe-16">
    <p class="text-3xl">
      {data.tags}
    </p>
    <a href={`/work/${slug}`} class="text-3xl"> More </a>
  </div>
</div>
<aside class="absolute -z-10 opacity-20 lg:relative lg:opacity-100">
  <img
    class="min-w-[700px]"
    src={data.img}
    alt={data.img_alt || ""}
    loading="lazy"
    decoding="async"
  />
</aside>
