---
import type { CollectionEntry } from "astro:content";

interface Props {
  project: CollectionEntry<"work">;
}

const { data, slug } = Astro.props.project;
---

<div class="flex w-screen xl:w-full flex-col items-start justify-between">
  <div class="flex flex-col">
    <h2 class="text-5xl xl:text-9xl">{data.title}</h2>
    <p class="text-xl max-w-[200px] xl:text-3xl xl:self-end xl:max-w-[253px]">
      {data.subtitle}
    </p>
  </div>
  <div
    class="absolute bottom-[2em] max-w-[300px] md:max-w-none md:relative md:bottom-0 md:flex flex-row justify-between items-center w-full md:pe-16"
  >
    <p class="text-xl xl:text-3xl">
      {data.tags}
    </p>
    <a href={`/work/${slug}`} class="text-xl xl:text-3xl"> More </a>
  </div>
</div>
<aside class="mt-5 md:mt-0 -z-10 md:relative md:opacity-100">
  <img
    class="h-full object-cover sm:h-unset max-w-[300px] xl:min-w-[700px]"
    src={data.img}
    alt={data.img_alt || ""}
    loading="lazy"
    decoding="async"
  />
</aside>
