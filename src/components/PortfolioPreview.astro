---
import type { CollectionEntry } from "astro:content";

interface Props {
  project: CollectionEntry<"work">;
}

const { data, slug } = Astro.props.project;
---

<div
  class="sticky top-[100px] sm:h-full flex w-full xl:w-full flex-col items-start justify-between"
>
  <div class="flex flex-col">
    <a
      href={`/work/${slug}`}
      class="text-5xl lg:text-6xl xl:text-6xl 2xl:text-[10rem] underline"
      data-aos="fade-right"
      data-aos-offset="200"
      data-aos-duration="1000"
    >
      {data.title}
    </a>
    <p
      class="text-xl max-w-[200px] xl:text-3xl xl:max-w-[253px] mt-5"
      data-aos="fade-left"
      data-aos-duration="1000"
    >
      {data.subtitle}
    </p>
    <div class="flex flex-row justify-between mt-5 text-2xl">
      <a class="underline" href={data.url} target="_blank">Visit site</a>
    </div>
  </div>
</div>
<a href={`/work/${slug}`}>
  <aside class="project-aside mt-8 md:mt-0 -z-10 md:relative md:opacity-100">
    <img
      class="h-[400px] md:h-[1000px] object-cover sm:h-unset max-w-[300px] lg:max-w-[720px]"
      data-aos="fade-left"
      data-aos-duration="1000"
      src={data.img}
      alt={data.img_alt || ""}
      loading="lazy"
      decoding="async"
    />
  </aside>
</a>
